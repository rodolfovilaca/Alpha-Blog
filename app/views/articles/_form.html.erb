<%= render "shared/errors", record: @article%>
<div class="row">
  <div class="col-xs-12">
      <%= form_for(@article, :html => {class:"form-horizontal", role:"form"}) do |f| %> <!--# formulario para preenchimento e criação da Article -->
      <div class= "form-group">
        <div class="control-label col-sm-2">
          <%= f.label :title %>
        </div>
        <div class="col-sm-8">
          <%= f.text_field :title, class: "form-control", placeholder: "Title of article", autofocus: true %>
        </div>
      </div>
      <div class= "form-group">
        <div class="control-label col-sm-2">
          <%= f.label :descriptions %>
        </div>
        <div class="col-sm-8">
          <%= f.text_area :descriptions, rows:10, class:"form-control", placeholder:"Body of Article"%>
        </div>
      </div>
        <div class="form-group">
          <div class="col-xs-2 col-xs-offset-2">
            <%= f.submit 'Save Article', class: "btn btn-primary btn-lg"%>
          </div>
          <div class="col-xs-2 col-xs-offset-5">
            <%= link_to "Cancel",:back, class: "btn btn-default btn-lg"%>
          </div>
        </div>
      <%end%>
    </div>
</div>
