<%= render "shared/errors", record: @article%>
<div class="row">
  <div class="col-xs-12">
      <%= form_for(@article, :html => {class:"form-horizontal", role:"form"}) do |f| %> <!--# formulario para preenchimento e criação da Article -->
      <div class= "form-group">
        <div class="control-label col-sm-2">
          <%= f.label :title %>
        </div>
        <div class="col-sm-8">
          <%= f.text_field :title, class: "form-control", placeholder: "Title of article", autofocus: true %>
        </div>
      </div>
      <div class= "form-group">
        <div class="control-label col-sm-2">
          <%= f.label :descriptions %>
        </div>
        <div class="col-sm-8">
          <%= f.text_area :descriptions, rows:10, class:"form-control", placeholder:"Body of Article"%>
        </div>
      </div>
      <div class="form-group">
        <div class="row">
          <div class="col-sm-8 col-sm-offset-2">
            <%= f.collection_check_boxes :category_ids, Category.all, :id, :name do |cb| %>
              <%= cb.label(class: "checkbox-inline input_checkbox"){ cb.check_box(class: "checkbox") + cb.text } %>
            <% end %>
          </div>
        </div>
      </div>
        <div align="center" class="form-group">
          <div class="btns-align">
            <%= f.submit 'Save Article', class: "btn btn-primary btn-md"%>
          </div>
          <div class="btns-align">
            <%= link_to "Cancel",:back, class: "btn btn-default btn-md"%>
          </div>
        </div>
      <%end%>
    </div>
</div>
