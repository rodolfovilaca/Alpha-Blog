<div class="col-xs-8 col-xs-offset-2">
  <%= render "shared/errors", record: @user%>
</div>
<div class="row">
  <div class="col-xs-8 col-xs-offset-2">
      <%= form_for(@user, :html => {class:"form-horizontal", role:"form"}) do |f| %> <!--# formulario para preenchimento e criação da Article -->
      <div class= "form-group">
        <div class="control-label col-sm-2">
          <%= f.label :username %>
        </div>
        <div class="col-sm-8">
          <%= f.text_field :username, class: "form-control", placeholder: "Enter Username", autofocus: true %>
        </div>
      </div>
      <div class= "form-group">
        <div class="control-label col-sm-2">
          <%= f.label :email %>
        </div>
        <div class="col-sm-8">
          <%= f.text_field :email, class: "form-control", placeholder: "Enter Email" %>
        </div>
      </div>
      <div class= "form-group">
        <div class="control-label col-sm-2">
          <%= f.label :password %>
        </div>
        <div class="col-sm-8">
          <%= f.password_field :password, rows:10, class:"form-control", placeholder:"Enter Password"%>
        </div>
      </div>
        <div class="form-group">
          <div class="col-xs-1 col-xs-offset-2">
            <%= f.submit(@user.new_record? ? 'Sign Up' : 'Save', class: "btn btn-primary btn-md")%>
          </div>
          <div class="col-xs-1">
            <%= link_to "Cancel",:back, class: "btn btn-default btn-ms"%>
          </div>
        </div>
      <%end%>
    </div>
</div>
